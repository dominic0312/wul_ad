= form_for(@notice) do |f|
  - if @notice.errors.any?
    #error_explanation
      %h2
        = pluralize(@notice.errors.count, "error")
        prohibited this notice from being saved:
      %ul
        - @notice.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br
      = f.text_field :title
  .field
    = f.label :content
    %br
      = f.text_area :content
  .field
    = f.label :creator_id
    %br
      = f.number_field :creator_id
  .field
    = f.label :approval_id
    %br
      = f.number_field :approval_id
  .field
    = f.label :release_time
    %br
      = f.datetime_select :release_time
  .field
    = f.label :expiration_time
    %br
      = f.datetime_select :expiration_time
  .field
    = f.label :status
    %br
      = f.number_field :status
  .actions
    = f.submit
