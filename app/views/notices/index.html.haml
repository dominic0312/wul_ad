.container
  %h1 Listing notices
  %table.table.table-hover
    %thead
      %tr
        %th Title
        %th Content
        %th Creator
        %th Approval
        %th Release time
        %th Expiration time
        %th Status
        %th
        %th
        %th
    %tbody
      - @collection.each do |notice|
        %tr
          %td= notice.title
          %td= notice.content
          %td= notice.creator_id
          %td= notice.approval_id
          %td= notice.release_time
          %td= notice.expiration_time
          %td= notice.status
          %td= link_to 'Show', notice
          %td= link_to 'Edit', edit_notice_path(notice)
          %td= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' }
  %br
    = link_to 'New Notice', new_notice_path
